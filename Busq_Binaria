def busqueda_binaria(lista, objetivo):
    inicio = 0
    fin = len(lista) - 1

    while inicio <= fin:
        medio = (inicio + fin) // 2
        if lista[medio] == objetivo:
            return medio
        elif lista[medio] < objetivo:
            inicio = medio + 1
        else:
            fin = medio - 1
    return -1

precios = [10, 20, 30, 40, 50, 60, 70]
precio_buscar = 50

resultado = busqueda_binaria(precios, precio_buscar)

if resultado != -1:
    print(f"Precio encontrado en la posiciÃ³n {resultado}.")
else:
    print("Precio no encontrado.")
